<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.wahyudwi.notesapp.ui.home.HomeFragment"
        android:label="Note"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_contentFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.wahyudwi.notesapp.ui.content.ContentFragment"
        android:label=""
        tools:layout="@layout/fragment_content" >
        <action
            android:id="@+id/action_contentFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="currentNote"
            app:argType="com.wahyudwi.notesapp.data.entity.NoteEntity" />
    </fragment>
</navigation>